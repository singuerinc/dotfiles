# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config defaultToCurrentScreen true

# Window Hints
bind esc:cmd hint

alias move2center move screenOriginX+((screenSizeX/2)-(windowSizeX/2));screenOriginY+((screenSizeY/2)-(windowSizeY/2)) newWindowSizeX;newWindowSizeY

alias num1 corner top-left resize:screenSizeX*0.6;screenSizeY
alias num2 move screenOriginX;screenOriginY+(screenSizeY/2) screenSizeX;screenSizeY/2
alias num3 resize +0 +10%
alias num4 corner top-left resize:screenSizeX/2;screenSizeY
alias num5 move screenOriginX+(screenSizeX/12);screenOriginY+75 (screenSizeX)-(screenSizeX/6);screenSizeY-150
alias num6 corner top-right resize:screenSizeX/2;screenSizeY
alias num7 move screenOriginX+(screenSizeX/12);screenOriginY (screenSizeX)-(screenSizeX/6);screenSizeY
alias num8 corner top-left resize:screenSizeX;screenSizeY/2
alias num9 resize +0 -10%
alias num0 move screenOriginX+10;screenOriginY+10 screenSizeX-20;screenSizeY-20

bind f13:cmd,shift move screenOriginX+((screenSizeX/2)-720);screenOriginY+((screenSizeY/2)-412) 1440;824
alias f16 move screenOriginX+(screenSizeX/6);screenOriginY+125 (screenSizeX)-(screenSizeX/3);screenSizeY-400
alias f17 move screenOriginX;screenOriginY+75 screenSizeX;screenSizeY-150
alias f18 move screenOriginX+(screenSizeX/6);screenOriginY (screenSizeX)-(screenSizeX/3);screenSizeY
alias f19 move screenOriginX+(screenSizeX/6);screenOriginY+75 (screenSizeX)-(screenSizeX/3);screenSizeY-150

bind pad1:cmd,shift ${num1}
bind 1:cmd,shift ${num1}

bind pad2:cmd,shift ${num2}
bind 2:cmd,shift ${num2}

bind pad4:cmd,shift ${num4}
# bind 4:cmd,shift ${num4}

bind pad5:cmd,shift ${num5}
bind 5:cmd,shift ${num5}

bind pad6:cmd,shift ${num6}
bind 6:cmd,shift ${num6}

bind pad7:cmd,shift ${num7}
bind 7:cmd,shift ${num7}

bind pad8:cmd,shift ${num8}
bind 8:cmd,shift ${num8}

bind pad0:cmd,shift ${num0}
bind 0:cmd,shift ${num0}

bind pad9:cmd,shift ${num9}
bind 9:cmd,shift ${num9}

bind pad3:cmd,shift ${num3}
# bind 3:cmd,shift ${num3}

bind pad+:cmd,shift sequence resize +50 +50 | ${move2center}
bind pad-:cmd,shift sequence resize -50 -50 | ${move2center}

bind f19:cmd,shift ${f19}
bind f18:cmd,shift ${f18}
bind f17:cmd,shift ${f17}
bind f16:cmd,shift ${f16}

bind f12:cmd,shift ${f19}
bind f11:cmd,shift ${f18}
bind f10:cmd,shift ${f17}


bind 1:ctrl grid padding:1 1920x1200:6,9 1680x1050:9,6
