# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Window Hints
bind esc:cmd hint

#alias center_window move (screenSizeX/10);(screenSizeY/14) (screenSizeX)-(screenSizeX/5);screenSizeY-(screenSizeY/7)
alias center_window move (screenSizeX/12);screenOriginY+30 (screenSizeX)-(screenSizeX/6);screenSizeY-60
alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY

bind pad1:cmd,shift move screenOriginX;screenOriginY screenSizeX*0.6;screenSizeY
bind pad2:cmd,shift move screenOriginX;screenSizeY/2 screenSizeX;screenSizeY
bind pad4:cmd,shift move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
bind pad5:cmd,shift ${center_window}
bind pad6:cmd,shift move screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
bind pad8:cmd,shift move screenOriginX;screenOriginY screenSizeX;screenSizeY/2
bind pad0:cmd,shift ${full}

bind 1:ctrl grid padding:2 1920x1200:6,9